<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ouzhanpc.bluetootholurins.MainActivity">

    <Button
        android:text="Bağlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnbaglan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ytext"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/xtext"
        android:layout_alignRight="@+id/xtext"
        android:layout_alignEnd="@+id/xtext" />

    <Button
        android:text="Kayıtları Sil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSil"
        android:onClick="KayitSil"
        android:textSize="14sp"
        android:layout_below="@+id/btnArsiv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SVT"
        android:textOff="Kayıda Başla"
        android:textOn="Kayıdı Durdur"
        android:textSize="14sp"
        android:layout_below="@+id/btnSil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_alignLeft="@+id/btnSil"
        android:layout_alignStart="@+id/btnSil" />

    <TextView
        android:text="İvme Değerleri:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/btnArsiv"
        android:layout_alignBottom="@+id/btnArsiv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xtext"
        android:textSize="20sp"
        android:layout_below="@+id/btnArsiv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp" />

    <Button
        android:text="Kayıtlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnArsiv"
        android:onClick="ArsivOnClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btnSil"
        android:layout_alignStart="@+id/btnSil" />

</RelativeLayout>
